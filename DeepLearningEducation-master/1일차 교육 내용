print([st1.stem(w) for w in words])
print([st2.stem(w) for w in words])

===> 풀어쓰기

ps = []
ls = []
for w in words:
  ps.append(st1.stem(w))  
  ls.append(st2.stem(w))
print(ps)
print(ls)



[lm.lemmatize(w, pos="v") for w in words]

====> 풀어쓰기

lem = []
for w in words:
  lm.append(lm.lemmatize(w, pos='v'))  
print(lem)
